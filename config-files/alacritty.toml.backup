[window]
decorations = "none"
startup_mode = "Windowed"
title = "Alacritty"

[window.class]
general = "Alacritty"
instance = "Alacritty"

[window.dimensions]
columns = 65
lines = 40

[window.padding]
x = 1
y = 1

[window.position]
x = 0
y = 0
